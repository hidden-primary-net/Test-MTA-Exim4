[PerlTidy]
argv =  --profile=$ROOT/.perltidyrc
select = **/*.{pl,pm,t}
select = t/scripts/fake_exim

[PodTidy]
;# we exclude README.pod as that is autogenerated
select = {lib,t,sample}**/*.{pl,pm,pod}

[PerlCritic]
select = **/*.{pl,pm}
select = t/scripts/fake_exim
except_modes = editor

[Perl::AlignMooseAttributes]
select = **/*.{pl,pm,t}
select = t/scripts/fake_exim
